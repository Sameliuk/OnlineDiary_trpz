@model IEnumerable<OnlineDiaryApp.Models.Tag>

<link rel="stylesheet" href="~/css/tag-list.css" />

<div class="tag-page">
    <div class="tag-container">
    <h2>🏷️ Список тегів</h2>

    <div class="btn-container">
        <a asp-action="Create" class="btn-create">➕ Створити новий тег</a>
    </div>

    <div class="tag-table-container">
        <table class="tag-table">
            <thead>
                <tr>
                    <th>Назва тегу</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Name</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@tag.Id" class="btn-delete">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>
</div>
